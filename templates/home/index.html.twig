{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="p-5 mb-4 bg-primary text-white rounded-3">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Welcome to Aymen shop</h1>
        <p class="col-md-8 fs-4">Manage your products easily with our intuitive dashboard and CRUD operations.</p>
        <div class="d-flex gap-2 mt-4">
            {% if app.user %}
                <a class="btn btn-light btn-lg" href="{{ path('produit_list') }}">Browse Products</a>
            {% else %}
                <a class="btn btn-light btn-lg" href="{{ path('app_login') }}">Login</a>
                <a class="btn btn-outline-light btn-lg" href="{{ path('app_register') }}">Register</a>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
